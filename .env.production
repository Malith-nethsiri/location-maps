# Production Environment Configuration
# Location Intelligence Web App

# Server Configuration
NODE_ENV=production
PORT=3001

# Database Configuration (Railway)
DATABASE_URL=${RAILWAY_DATABASE_URL}
POSTGRES_HOST=${RAILWAY_POSTGRES_HOST}
POSTGRES_PORT=${RAILWAY_POSTGRES_PORT}
POSTGRES_DB=${RAILWAY_POSTGRES_DB}
POSTGRES_USER=${RAILWAY_POSTGRES_USER}
POSTGRES_PASSWORD=${RAILWAY_POSTGRES_PASSWORD}

# Google Maps API Configuration
GOOGLE_MAPS_API_KEY=${GOOGLE_MAPS_API_KEY}
GOOGLE_API_TIMEOUT=10000

# Rate Limiting Configuration (Optimized for production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200

# CORS Configuration
CORS_ORIGIN=https://location-intelligence-app.vercel.app

# Cache Configuration (Cost optimization)
CACHE_TTL_STATIC_MAPS=86400
CACHE_TTL_POI_DATA=21600
CACHE_TTL_GEOCODING=7200
CACHE_TTL_ROUTES=7200

# Cost Optimization Flags
ENABLE_API_BATCHING=true
ENABLE_DATABASE_FALLBACK=true
ENABLE_COMPREHENSIVE_CACHING=true
DISABLE_REDUNDANT_ROUTES_API=true

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/production.log

# Performance Configuration
CONNECTION_POOL_MIN=2
CONNECTION_POOL_MAX=20
CONNECTION_POOL_IDLE_TIMEOUT=30000
QUERY_TIMEOUT=30000