# ValuerPro Environment Configuration
# Copy this file to .env and update with your actual values

# ===============================================
# Database Configuration
# ===============================================
DATABASE_URL=postgresql://username:password@hostname:port/database_name

# Test Database (for development/testing)
TEST_DATABASE_URL=postgresql://username:password@hostname:port/test_database_name

# ===============================================
# Google Maps API Configuration
# ===============================================
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# ===============================================
# OpenAI Configuration
# ===============================================
OPENAI_API_KEY=your_openai_api_key_here

# ===============================================
# JWT Configuration
# ===============================================
JWT_SECRET=your_very_secure_jwt_secret_here_at_least_32_characters_long

# ===============================================
# CORS Configuration
# ===============================================
CORS_ORIGIN=https://your-frontend-domain.vercel.app

# ===============================================
# Rate Limiting Configuration
# ===============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===============================================
# Admin API Key (for health checks and monitoring)
# ===============================================
ADMIN_API_KEY=your_admin_api_key_for_monitoring

# ===============================================
# Frontend URL (for Vercel deployment)
# ===============================================
FRONTEND_URL=https://valuerpro.online

# ===============================================
# Node Environment
# ===============================================
NODE_ENV=production

# ===============================================
# Railway Specific (if using Railway)
# ===============================================
PORT=$PORT

# ===============================================
# Optional: Redis Configuration (for caching)
# ===============================================
REDIS_URL=redis://username:password@hostname:port

# ===============================================
# Optional: Email Configuration (for notifications)
# ===============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# ===============================================
# Optional: File Storage Configuration
# ===============================================
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp

# ===============================================
# Security Configuration
# ===============================================
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=3600000

# ===============================================
# Monitoring Configuration
# ===============================================
LOG_LEVEL=info
ENABLE_MONITORING=true

# ===============================================
# Development Only
# ===============================================
VERBOSE_TESTS=false
DEBUG_SQL=false